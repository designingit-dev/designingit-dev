<div class="container padding--top--half padding--bottom--none">
  <div class="row">
    <div class="l--medium--12 columns">
      <h2 class="text--larger text--sansSerif--black margin--bottom--none">{{ title }}</h2>
    </div>
    {% for product in products %}
      <div class="l--small--6 l--medium--4 columns">
        <div class="productList__image">
          <a href="{{ product.url }}">
            <img src="{{ product.image.one.getURL("xsmall") }}" />
          </a>
        </div>
        <a class="noHoverEffects" href="{{ product.url }}"><h3 class="text--black text--large text--sansSerif--black margin--bottom--none productList__productTitle">{{ product.title }}</h3></a>
          {% if product.defaultVariant.onSale %}
            <p class="margin--top--narrow margin--bottom--none"><s>{{ product.defaultVariant.price | commerceCurrency(cart.currency) }}</s></p>
            <p class="margin--bottom--narrow text--red">{{ product.defaultVariant.salePrice | commerceCurrency(cart.currency) }}</p>
          {% else %}
            <p class="margin--top--narrow margin--bottom--narrow text--red">{{ product.defaultVariant.price | commerceCurrency(cart.currency) }}</p>
          {% endif %}
          <a class="button text--uppercase" href="{{ product.url }}">View product</a>
        </div>
        {% if loop.index % 2 == 0 %}
          <div class="clearfix__small"></div>
        {% endif %}
        {% if loop.index % 3 == 0 %}
          <div class="clearfix__medium clearfix__large"></div>
        {% endif %}
      {% endfor %}
  </div>
</div>
