{% macro errorList(errors) %}
  {# To display errors, you want to make sure errors exist, 
  and then you can loop through and display them
  Stolen from http://sprout.barrelstrengthdesign.com/craft-plugins/forms/docs/examples/custom-html #}
  {% if errors %}
    <ul class="errors">
      {% for error in errors %}
        <li>{{ error }}</li>
      {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
