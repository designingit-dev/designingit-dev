            <div class="row">
                <div class="l--small--12 columns text--alignCenter strengthMpp__fullScreen__modal__quote text--black">
                    <p class="text--sansSerif-light text--large">
                        {{ craft.keiserContactHelpers.stripEnclosingParagraphTags(strengthMppSharedContentEntry.strengthMppSharedContent.one.madeInTheUsaModalHighlightedQuote)|raw }}
                    </p>
                    <p class="text--uppercase margin--bottom--none">- {{ strengthMppSharedContentEntry.strengthMppSharedContent.one.madeInTheUsaModalDennisKeiserName }}</p>
                </div>
                <div class="l--small--12 columns text--alignCenter">
                    <span class="text--white text--underline strengthMpp__fullScreen__modal__close__link" v-on:click="closeModal('madeInTheUSA__modal')">Close</span>
