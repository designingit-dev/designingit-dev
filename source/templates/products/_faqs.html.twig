<h2 id="productFAQContainerTitle">Frequently asked questions</h2>
<div class="row">
  <div class="l--small--12 columns l--noMargin">
    {% for block in entry.frequentlyAskedQuestions %}
      <div class="faq">
        <div class="faq__iconWrapper">
          <img class="faq__icon" src="/assets/images/plus-button.svg" alt="plus">
        </div>
        <div class="faq__content">
          <div class="faq__question">
            {{ block.question }}
          </div>
          <div class="faq__answer" aria-hidden="true">
            {{ block.answer|parseRefs|raw }}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
